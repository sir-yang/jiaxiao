
radio {
    transform: scale(0.8);
}

.banner_img {
    display: block;
    width: 100%;
    height: 360rpx;
}

.about_class_btn {
    position: relative;
    width: 300rpx;
    height: 300rpx;
    margin: 170rpx auto 10rpx;
}
.about_class_btn > image {
    width: 100%;
    height: 100%;
}
.about_class_btn .text {
    position: absolute;
    left: 50%;
    bottom: 85rpx;
    transform: translateX(-50%);
    font-size: 28rpx;
    color: #fff;
}


/* 弹框 */
.tk_modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 99;
}
.tk_content_box {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 560rpx;
    z-index: 100;
}
.tk_content {
    padding: 30rpx 40rpx 60rpx;
    background: #fff;
    border-radius: 15rpx;
    -webkit-border-radius: 15rpx;
    -moz-border-radius: 15rpx;
    -o-border-radius: 15rpx;
}
.reser_box {
    line-height: 52rpx;
    font-size: 26rpx;
    color: #333;
}

.reser_box > .pos,.radio-group {
    line-height: 74rpx
}

.radio-group label:nth-child(2) {
    margin-left: 60rpx;
}
.reser_box .address_img {
    width: 21rpx;
    height: 28rpx;
}

.reser_box .more {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    width: 11rpx;
    height: 20rpx;
}

.start_reser_btn {
    width: 384rpx;
    height: 72rpx;
    margin-top: 20rpx;
    text-align: center;
    line-height: 72rpx;
    background: #487dff;
    color: #fff;
    font-size: 28rpx;
    border-radius: 36rpx;
    -webkit-border-radius: 36rpx;
    -moz-border-radius: 36rpx;
    -o-border-radius: 36rpx;
}

.tk_content_box .closeTk {
    display: block;
    margin: 40rpx auto 0;
    width: 59rpx;
    height: 59rpx;
}